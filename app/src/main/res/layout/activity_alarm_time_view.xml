<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".AlarmTimeViewActivity"
    android:orientation="vertical"
    android:background="@color/black">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_weight="1.5">
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/bingle"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:text="오늘도 힘내주셔서 감사합니다"
        android:textSize="30dp"
        />
    <Button
        android:text=">"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:backgroundTint="#00ff0000"
        android:drawableRight="@drawable/time"
        android:drawableTint="@color/white"
        android:fontFamily="@font/bingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickbtn"/>
</LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9"

        />
    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:onClick="bt1"
        android:fontFamily="@font/bingle"
        android:text="이미지 선택"
        android:backgroundTint="#fffff0"
        android:textSize="20dp"
        android:drawableRight="@drawable/image"
        android:textColor="#3d3434"
        android:layout_above="@id/imageView"
        android:layout_alignParentBottom="true"
        />





</androidx.appcompat.widget.LinearLayoutCompat>